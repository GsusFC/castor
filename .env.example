# Database (Turso)
DATABASE_URL="file:local.db"
DATABASE_AUTH_TOKEN=""

# Session Security (REQUIRED in production - min 32 chars)
SESSION_SECRET="your-super-secret-key-min-32-characters"

# Neynar API
NEYNAR_API_KEY="your_neynar_api_key"
NEYNAR_WEBHOOK_SECRET="your_neynar_webhook_secret"

# Farcaster Developer Wallet (12-word mnemonic)
FARCASTER_DEVELOPER_MNEMONIC="your twelve word mnemonic phrase here"

# Giphy API (get free key at https://developers.giphy.com/)
NEXT_PUBLIC_GIPHY_API_KEY="your_giphy_api_key"

# Cron Job Security (optional, for protecting /api/cron endpoints)
CRON_SECRET="your-cron-secret"
CRON_WATCHDOG_OVERDUE_MINUTES="10"
CRON_WATCHDOG_HEARTBEAT_MINUTES="3"
CRON_ALERT_COOLDOWN_MINUTES="30"
DISCORD_WEBHOOK_URL=""

# Rate Limiting - Upstash Redis (optional, uses memory in dev)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# Logging
LOG_LEVEL="info"  # debug, info, warn, error

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Beta Access (comma-separated FIDs, leave empty for public access)
ALLOWED_FIDS=""

# AI - Google Gemini (get key at https://aistudio.google.com/apikey)
GEMINI_API_KEY=""
GEMINI_MODEL_DEFAULT="gemini-2.5-flash"
GEMINI_MODEL_PRO="gemini-2.5-pro"
GEMINI_MODEL_REPLY="gemini-2.5-flash"
GEMINI_MODEL_TRANSLATION="gemini-2.5-flash"
GEMINI_MODEL_BRAND_VALIDATION="gemini-2.5-flash"
GEMINI_MODEL_ANALYTICS="gemini-2.5-flash-lite"
GEMINI_MODEL_STYLE_PROFILE="gemini-2.5-flash-lite"
GEMINI_MODEL_FALLBACK="gemini-2.5-flash-lite"
GEMINI_TIMEOUT_MS="15000"

# Warpcast API (for Direct Casts - get from Warpcast Developer Mode)
WARPCAST_API_KEY=""

# Notifications - Real-time strategy
# Set to "false" to force polling mode (recommended for Netlify)
# Default: auto-detect (tries SSE first, falls back to polling if it fails)
NEXT_PUBLIC_USE_SSE="true"
